generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum SupportLevel {
  GOOD
  AVERAGE
  BAD
}

model Provider {
  id           Int           @id @default(autoincrement())
  name         String
  website      String?
  supportLevel SupportLevel?
  notes        String?
  createdAt    DateTime      @default(now())

  apis         Api[]         // 1 Provider â†’ N Apis
}

model Api {
  id          Int       @id @default(autoincrement())
  name        String
  key         String?
  docsUrl     String?
  providerId  Int
  description String?
  deprecated  Boolean   @default(false)
  createdAt   DateTime  @default(now())

  provider    Provider  @relation(fields: [providerId], references: [id], onDelete: Cascade)

  memories    ApiMemory[]
  evaluation  ApiEvaluation?
  flags       ApiFlag[]
  contexts    ApiContext[]
}


enum MemoryType {
  BUG
  INCONSISTENCY
  UNDOCUMENTED_BEHAVIOR
  SILENT_CHANGE
  OTHER
}

model ApiMemory {
  id        Int       @id @default(autoincrement())
  apiId     Int
  type      MemoryType
  content   String
  project   String?
  occurredAt DateTime?
  createdAt DateTime  @default(now())

  api       Api       @relation(fields: [apiId], references: [id], onDelete: Cascade)
}

model ApiEvaluation {
  id           Int      @id @default(autoincrement())
  apiId        Int      @unique
  stability    Int
  costValue    Int
  performance  Int
  support      Int
  notes        String?
  createdAt    DateTime @default(now())

  api Api @relation(fields: [apiId], references: [id], onDelete: Cascade)
}

enum FlagLevel {
  BLACK
  GRAY
  WARNING
}

model ApiFlag {
  id        Int      @id @default(autoincrement())
  apiId     Int
  level     FlagLevel
  reason    String
  createdAt DateTime @default(now())

  api       Api      @relation(fields: [apiId], references: [id], onDelete: Cascade)
}

enum ContextType {
  RECOMMENDED
  AVOID
}

model ApiContext {
  id        Int         @id @default(autoincrement())
  apiId     Int
  type      ContextType
  context   String

  api       Api         @relation(fields: [apiId], references: [id], onDelete: Cascade)
}